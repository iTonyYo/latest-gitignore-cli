{
  "bin": {
    "latest-gitignore": "lib/index.js"
  },
  "scripts": {
    "start": "yarn build > /dev/null && DEBUG=LG:* ./lib/index.js --help",
    "build": "npx babel-node ./scripts/clean-built && npx babel-node ./scripts/pack",
    "clean": "npx babel-node ./scripts/clean",
    "license": "npx babel-node ./scripts/license",
    "reprepare": "npx babel-node ./scripts/re-prepare",
    "lint": "npx eslint --cache ./src/**/*.js",
    "changelog": "npx auto-changelog -p",
    "snyk-protect": "npx snyk protect",
    "prepublishOnly": "npm run snyk-protect"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "lib/**/*.js"
  ],
  "name": "latest-gitignore-cli",
  "description": "添加 / 更新 `.gitignore`。直接从 `github/gitignore·` 项目 `master` 分支获取模板，而非 `gitignore.io`。",
  "gitignore": [
    "macOS",
    "Windows",
    "Linux",
    "Node",
    "VisualStudioCode",
    "SublimeText",
    "CVS",
    "Diff",
    "Vim",
    "TortoiseGit",
    "Diff",
    "Patch"
  ],
  "dependencies": {
    "cache-manager": "^3.2.1",
    "cache-manager-fs": "^1.0.8",
    "callsites": "^3.1.0",
    "camelcase-keys": "^6.2.2",
    "chalk": "^4.0.0",
    "cosmiconfig": "^6.0.0",
    "debug": "^4.1.1",
    "got": "^11.0.2",
    "has-ext": "^1.0.1",
    "is-reachable": "^4.0.0",
    "lodash.filter": "^4.6.0",
    "meow": "^6.1.0",
    "p-map": "^4.0.0",
    "redent": "^3.0.0",
    "update-notifier": "^4.1.0",
    "write-file-atomic": "^3.0.3"
  },
  "private": false,
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-json": "^4.0.3",
    "auto-changelog": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "execa": "^4.0.0",
    "license-checker": "^25.0.1",
    "listr": "^0.14.3",
    "make-dir": "^3.1.0",
    "p-series": "^2.1.0",
    "rollup": "^2.7.2",
    "rollup-plugin-terser": "^5.3.0",
    "snyk": "^1.996.0",
    "trash": "^6.1.1"
  },
  "keywords": [
    "git",
    "gitignore",
    "初始化",
    "init",
    "脚手架",
    "scaffold",
    "生成器",
    "generator",
    "工具",
    "tool",
    "cli",
    "oopsunome"
  ],
  "version": "1.2.1",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10.13.0"
          }
        }
      ]
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "eslintIgnore": [
    "*-test.js",
    "esm/**",
    ".github/**",
    ".vscode/**",
    "scripts/**",
    "coverage/**"
  ],
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "globals": {
      "require": true,
      "process": true,
      "module": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parser": "babel-eslint",
    "rules": {
      "no-console": 0,
      "no-confusing-arrow": 0
    }
  },
  "auto-changelog": {
    "output": "UPDATELOG.md",
    "template": "changelog-template.hbs",
    "unreleased": true,
    "commitLimit": false,
    "includeBranch": [
      "master",
      "develop"
    ]
  },
  "snyk": true,
  "author": {
    "name": "iyowei",
    "email": "swzyocowboy@icloud.com",
    "url": "https://github.com/iTonyYo"
  },
  "repository": {
    "url": "git@github.com:iTonyYo/latest-gitignore-cli.git",
    "type": "git"
  },
  "homepage": "https://github.com/iTonyYo/latest-gitignore-cli",
  "bugs": "https://github.com/iTonyYo/latest-gitignore-cli/issues",
  "publishConfig": {
    "access": "public"
  }
}
